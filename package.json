{
	"name": "@tadashi/doc2pdf",
	"version": "1.0.0",
	"description": "doc2pdf is a library that converts docx documents into pdf.",
	"keywords": [
		"lib",
		"docx",
		"pdf",
		"converter",
		"template",
		"docxtemplater"
	],
	"author": "Thiago Lagden",
	"license": "MIT",
	"engines": {
		"node": ">=20"
	},
	"type": "module",
	"files": [
		"src",
		"types",
		"LICENSE",
		"README.md"
	],
	"main": "./src/doc2pdf.js",
	"types": "./types/doc2pdf.d.ts",
	"exports": {
		".": {
			"import": "./src/doc2pdf.js",
			"types": "./types/doc2pdf.d.ts"
		}
	},
	"scripts": {
		"tsc": "tsc",
		"lint": "deno lint",
		"check": "deno fmt --check",
		"format": "deno fmt",
		"rm": "rimraf test/helper/*.pdf",
		"pretest": "run-s check lint rm",
		"test": "c8 --reporter=text-summary --reporter=lcovonly --reporter=cobertura node --test test/*.spec.js"
	},
	"dependencies": {
		"docxtemplater": "3.61.1",
		"pizzip": "3.1.8"
	},
	"devDependencies": {
		"@types/node": "22.14.1",
		"c8": "10.1.3",
		"npm-run-all": "4.1.5",
		"rimraf": "6.0.1",
		"typescript": "5.8.3"
	}
}
